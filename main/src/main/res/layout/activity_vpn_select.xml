<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/root_layout">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="username"
        android:id="@+id/et_username"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_username"
        android:hint="password"
        android:password="true"
        android:id="@+id/et_password"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="Update Region List"
        android:onClick="onClick"
        android:id="@+id/button_get_regions"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_alignParentLeft="true"
        android:id="@+id/spinner_region_select"
        android:padding="10dp"
        >
    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_region_select"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:text="Connect to selected VPN"
        android:onClick="onClick"
        android:id="@+id/button_connect"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_connect"
        android:layout_alignParentLeft="true"
        android:text="Disconnect"
        android:onClick="onClick"
        android:id="@+id/button_disconnect"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:layout_below="@id/button_disconnect"
        android:id="@+id/et_ip"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_ip"
        android:id="@+id/tv_acct_type"
        />

</RelativeLayout>
